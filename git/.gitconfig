[user]
	name = Konrad Czajka
	email = konrad.czajka@xstream.net
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	filemode = false
	trustctime = false
	autocrlf = input
[alias]
	co = checkout
	st = status
	chp = cherrypick
	ci = commit
[push]
	default = simple
	followTags = true
[fetch]
	prune = true
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[color "diff-highlight"]
	oldNormal = "red bold"
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"
[grep]
	lineNumber = true
[help]
	autocorrect = 1
[difftool]
	prompt = false
[mergetool]
	prompt = false
